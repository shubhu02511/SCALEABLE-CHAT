{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "style/*":[
            "style/*"
        ],
        "@repo/*": ["../../packages/style/*"]
      },
      
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
